<h1>Lista de Personajes de HP ⚡ </h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Ubicación</th>
    <th>Casa</th>
  </tr>
  </thead>
  <tbody>
  <% @characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.location %></td>
      <td><%= character.house %></td>
    </tr>
  <% end %>
  </tbody>
</table>

